<div class="thumb-wrap">
  <img class="image"><%= link_to image_tag(page.picture.url, alt: '', align:"left"), page_path(page)%></img>

  <h2 class="title"><%= link_to page.title, page_path(page) %></h2>
  <div class="user_date">
    <section class="user_info">
      <%= gravatar_for(page.user, size: 20) %>
      <span class="user"><%= link_to page.user.name, page.user %></span>
    </section>
  </div>
</div>
